{
	"name": "mcswift-mindmap",
	"displayName": "mcswift-mindmap",
	"description": "",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"publisher": "McSwift",
	"repository":{
		"type": "git",
		"url": "https://github.com/AshenBird/vscode-mindmap-extension"
	},
	"activationEvents": [
		"onCustomEditor:mcswift-mindmap.vscode-mindmap"
	],
	"main": "./out/host/index.js",
	"contributes": {
		"languages": [
			{
				"id": "mcswift-mind-map",
				"extensions": [
					".omm"
				],
				"aliases": [
					"MindMap"
				]
			}
		],
		"customEditors": [
			{
				"viewType": "mcswift-mindmap.vscode-mindmap",
				"displayName": "MindMap",
				"selector": [
					{
						"filenamePattern": "*.omm"
					}
				],
				"priority": "default"
			}
		]
	},
	"scripts": {
		"dev:client": "vite",
		"vscode:prepublish": "npm run build",
		"build": "node scripts/build.js",
		"watch": "node scripts/watch.js",
		"watch:host": "cd src/host && tsc -watch -p ./",
		"build:host": "cd src/host && tsc -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.62.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"cross-env": "^7.0.3",
		"esbuild": "^0.13.13",
		"eslint": "^8.1.0",
		"execa": "^5.1.1",
		"fs-extra": "^10.0.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"vite": "^2.6.14"
	},
	"dependencies": {
		"mind-elixir": "^0.18.1"
	}
}